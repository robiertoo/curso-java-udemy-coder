package oo.heranca.desafio;

public class Ferrari extends Carro implements Esportivo, Luxo{
	private boolean ligarTurbo;
	private boolean ligarAr;
	
	public Ferrari(int velocidadeMaxima) {
		super(velocidadeMaxima);
		setDelta(15);
	}
	
	public boolean isLigarTurbo() {
		return ligarTurbo;
	}

	public void setLigarTurbo(boolean ligarTurbo) {
		this.ligarTurbo = ligarTurbo;
	}

	public boolean isLigarAr() {
		return ligarAr;
	}

	public void setLigarAr(boolean ligarAr) {
		this.ligarAr = ligarAr;
	}

	@Override
	public void ligarTurbo() {
		ligarTurbo = true;
	}
	
	@Override
	public void desligarTurbo() {
		ligarTurbo = false;
	}
	
	@Override
	public void ligarAr() {
		ligarAr = true;
	}
	
	@Override
	public void desligarAr() {
		ligarAr = false;		
	}
	
	@Override
	public int getDelta() {
		return ligarTurbo ? 35 : 15;
	}
}
