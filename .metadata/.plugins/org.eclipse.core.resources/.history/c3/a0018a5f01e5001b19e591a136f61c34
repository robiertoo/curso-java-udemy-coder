	 * digita nota valida -> total
	 * sair -1
	 */
	
	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		
		int contador = 0;
		double total = 0;
		double nota = 0;
		
		while(!texto.equalsIgnoreCase("-1")) {
			System.out.println("Digite seu total: ");
			nota = entrada.nextDouble();
		}
		
		entrada.close();
	}
}
