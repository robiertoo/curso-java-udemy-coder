package oo.encapsulamento;

public class Pessoa {
	private String nome;
	private int idade;
	
	protected Pessoa(int idade) {
		setIdade(idade);
	}
	
	public int getIdade() {
		return this.idade;
	}	
	
	public void setIdade(int idade) {
		idade = Math.abs(idade);
		if(idade >= 0 && idade <= 130) this.idade = idade;
	}
}
