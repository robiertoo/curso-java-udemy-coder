package classe;

public class Data {
	int dia;
	int mes;
	int ano;
	
	Data() {
		this.dia = 1;
		this.mes = 1;
		this.ano = 1970;
	}
	
	Data(int dia, int mes, int ano) {
		this.dia = dia;
		this.mes = mes;
		this.ano = ano;
	}
	
	String formatarPedaco(int pedaco) {
		int tamanho = String.format("%d", pedaco).length();
		if(tamanho > 3 || tamanho == 2) return String.format("%d", pedaco);
		else return "0" + String.format("%d", pedaco);
	}
	
	String obterDataFormatada() {
		return String.format("%s/%s/%s", 
				formatarPedaco(this.dia), formatarPedaco(this.mes), formatarPedaco(this.ano));		
	}
	
	void imprimirDataFormatada() {
		System.out.println(obterDataFormatada());
	}
}
