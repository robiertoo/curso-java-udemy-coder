package classe;

public class Data {
	int dia;
	int mes;
	int ano;
	
	String formatarPedaco(pedaco) {
		int tamanho = String.format("%d", pedaco).length();
		if(tamanho > 3 || tamanho == 2) return toString(pedaco);
		else return "0" + toString(pedaco);
	}
	
	String obterDataFormatada() {
		return String.format("%d/%d/%d", dia, mes, ano);
	}
}
