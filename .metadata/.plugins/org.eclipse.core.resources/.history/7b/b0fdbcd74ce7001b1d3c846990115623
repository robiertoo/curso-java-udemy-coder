package oo.heranca.desafio;

/*
 * velocidade atual
 * acelerar v =+ 5
 * frear  !< 0 v-= 5
 * 
 */

public class Carro {
	int velocidadeAtual = 0;
	
	boolean acelerar() {
		this.velocidadeAtual += 5;
		return true;
	}
	
	boolean frear() {
		boolean menorQueZero = this.velocidadeAtual - 5 < 0;
		if(!menorQueZero) {
			this.velocidadeAtual -= 5;
			return true;
		}
		return false;
	}
}
