package fundamentos.operadores;

public class DesafioLogicos {
	/*
	 * trabalho na terça
	 * trabalho da quinta
	 * 
	 * if 1 tv 32
	 * else if2 tv 50
	 * sorvete
	 * 
	 */
	
	public static void main(String[] args) {
		boolean trabalho1 = true;
		boolean trabalho2 = false;
		String mensagem1, mensagem2; 
		
		if(trabalho1 || trabalho2) {
			mensagem1 = "Bora tomar sorvete, família";
		} else {
			mensagem1 = "Bora ficar saudável, família";
		}
		
		if(trabalho1 && !trabalho2) {
			mensagem2 = "Bora comprar a tv de 32 polegadas";
		} else if(trabalho1 && trabalho2) {
			mensagem2 = "Bora comprar a tv de 50 polegadas!";
		}
	}
}
